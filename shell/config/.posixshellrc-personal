#!/bin/sh

function addtopath() {
    new_path=$(readlink -f "$1")
    echo "export PATH=\$PATH:$(echo $new_path | sed "s|^$HOME|\$HOME|g")" >> ~/.pathrc
}

function cd() {
    if [ -z $@ ]; then
        builtin cd $HOME/Home
    else
        builtin cd $@
    fi
}

### EXPORTS ###

export PAGER='less'
export EDITOR='nvim'
export VISUAL='emacs'

### ALIASES ###

alias cls="clear"
alias vim="nvim"
alias md="mkdir"
alias demacs="/bin/emacs"
alias hiy="git"
alias last_installed="/bin/ls --time-style=+%d\ %b\ %G\ %H:%M -lct /etc | tail -1 | awk '{print \$6, \$7, \$8, \$9}'"
alias wget="wget -c"
alias lf="VISUAL=$EDITOR lf"
alias neofetch="hyfetch"

# list
alias ls='eza --color=always -lah'
alias l='ls'
alias l.="ls -A | egrep '^\.'"

# fix obvious typos
alias cd..='cd ..'
alias pdw='pwd'

# Colorize the grep command output for ease of use (good for log files)##
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

### PATH ###

if [ -d "$HOME/.local/bin" ]; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Update path in a separate file
[[ -f ~/.pathrc ]] && . ~/.pathrc

# For stuff that doesn't belong in the repo
[[ -f ~/.posixshellrc-custom ]] && . ~/.posixshellrc-custom
